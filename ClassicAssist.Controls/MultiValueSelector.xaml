<UserControl x:Name="userControl" x:Class="ClassicAssist.Controls.MultiValueSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ClassicAssist.Controls"
             mc:Ignorable="d"
             d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ClassicAssist.Shared;component/Resources/Icons.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/ClassicAssist.Shared;component/Resources/Colours.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/ClassicAssist.Shared;component/Resources/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="DefaultItemTemplate">
                <TextBlock Text="{Binding ., StringFormat={}0x{0:x8}}"
                           Foreground="{StaticResource ThemeForegroundBrush}" />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid DataContext="{Binding ElementName=userControl, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding ValuesDisplay}"
                       TextTrimming="CharacterEllipsis" HorizontalAlignment="Stretch" ToolTip="{Binding ValuesDisplay}" />
            <controls:ImageButton Grid.Column="1" ImageSource="{StaticResource EllipsisIcon }" Click="Button_Click" />
        </Grid>
        <Popup x:Name="Popup" StaysOpen="False" Opened="Popup_Opened">
            <Border Padding="5">
                <StackPanel Width="{Binding ElementName=userControl, Path=PopupWidth}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TextBox" PreviewKeyDown="TextBox_PreviewKeyDown" Grid.Column="0" />
                        <ContentPresenter HorizontalAlignment="Right"
                                          Content="{Binding Buttons, ElementName=userControl}" Grid.Column="1" />
                    </Grid>
                    <Border MinHeight="150" MaxHeight="300" BorderThickness="1"
                            BorderBrush="{StaticResource ThemeBorderBrush}" Margin="0,5,0,0">
                        <ItemsControl
                            ItemsSource="{Binding Values, ElementName=userControl, Mode=OneWay}"
                            Background="{StaticResource ThemeInnerControlBackgroundBrush}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter Grid.Column="0"
                                                          Content="{Binding}">
                                            <ContentPresenter.ContentTemplate>
                                                <Binding Path="ItemTemplate"
                                                         ElementName="userControl"
                                                         FallbackValue="{StaticResource DefaultItemTemplate}" />
                                            </ContentPresenter.ContentTemplate>
                                        </ContentPresenter>
                                        <controls:ImageButton ImageSource="{StaticResource RemoveIcon}"
                                                              ImageHeight="12" Grid.Column="1"
                                                              Command="{Binding RemoveItemCommand, ElementName=userControl}"
                                                              CommandParameter="{Binding}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>