<Window x:Class="ClassicAssist.UI.ViewModels.Agents.Autoloot.Python.PythonFunctionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassicAssist.UI.ViewModels.Agents.Autoloot.Python"
        xmlns:resources="clr-namespace:ClassicAssist.Shared.Resources;assembly=ClassicAssist.Shared"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviours="clr-namespace:ClassicAssist.Shared.UI.Behaviours;assembly=ClassicAssist.Shared"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:misc="clr-namespace:ClassicAssist.UI.Misc"
        mc:Ignorable="d"
        Title="{x:Static resources:Strings.Edit_Predicate_Functions}" Height="250" Width="500"
        Background="{DynamicResource ThemeWindowBackgroundBrush}" Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../../../Resources/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <local:PythonFunctionsViewModel />
    </Window.DataContext>
    <Grid Margin="10" Initialized="Grid_Initialized">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <avalonedit:TextEditor ShowLineNumbers="True" x:Name="CodeTextEditor" Grid.Row="0"
                               HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                               FontFamily="Consolas" Initialized="CodeTextEditor_Initialized" >
            <avalonedit:TextEditor.InputBindings>
                <KeyBinding Modifiers="Control" Key="S" Command="{Binding SaveCommand}" />
            </avalonedit:TextEditor.InputBindings>
            <b:Interaction.Behaviors>
                <misc:AvalonEditBehaviour
                    TextBinding="{Binding DocumentText, Mode=TwoWay}" />
                <misc:AvalonBindingBehaviour DocumentBinding="{Binding Document}"
                                             CaretBinding="{Binding CaretPosition}" />
            </b:Interaction.Behaviors>
        </avalonedit:TextEditor>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                    <Setter Property="Margin" Value="5,0,0,0" />
                </Style>
            </StackPanel.Resources>
            <Button Content="{x:Static resources:Strings.Save}"
                    Command="{Binding SaveCommand}">
                <b:Interaction.Behaviors>
                    <behaviours:CloseOnClickBehaviour />
                </b:Interaction.Behaviors>
            </Button>
            <Button Content="{x:Static resources:Strings.Cancel}">
                <b:Interaction.Behaviors>
                    <behaviours:CloseOnClickBehaviour />
                </b:Interaction.Behaviors>
            </Button>
        </StackPanel>
    </Grid>
</Window>