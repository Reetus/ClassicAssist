<UserControl x:Class="ClassicAssist.UI.Views.Agents.Autoloot.AutolootPropertyNameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:autoloot="clr-namespace:ClassicAssist.Data.Autoloot"
             xmlns:autolootViews="clr-namespace:ClassicAssist.UI.Views.Agents.Autoloot"
             xmlns:agents="clr-namespace:ClassicAssist.UI.ViewModels.Agents"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" x:Name="userControl">
    <UserControl.Resources>
    </UserControl.Resources>
    <StackPanel>
        <ComboBox SelectedItem="{Binding Property}"
                  ItemsSource="{Binding ElementName=userControl, Path=Constraints}"
                  DisplayMemberPath="Name" d:DataContext="{d:DesignData Type=autoloot:AutolootConstraintEntry }" />
        <autolootViews:AutolootSkillBonusSelector Margin="0,5,0,0"
                                              DataContext="{Binding}">
            <autolootViews:AutolootSkillBonusSelector.Style>
                <Style TargetType="{x:Type autolootViews:AutolootSkillBonusSelector}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding Property.AllowedValuesEnum}"
                            Value="{x:Type agents:SkillBonusSkills}">
                            <Setter Property="Visibility"
                                    Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </autolootViews:AutolootSkillBonusSelector.Style>
        </autolootViews:AutolootSkillBonusSelector>
    </StackPanel>
</UserControl>