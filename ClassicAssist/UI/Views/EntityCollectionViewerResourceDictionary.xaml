                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CornerRadius="2.5"
                                Visibility="Hidden" />
                        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <ContentPresenter />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
