<UserControl x:Name="userControl" x:Class="ClassicAssist.UI.Views.Macros.MacrosCodeTextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClassicAssist.UI.Views.Macros"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviours="clr-namespace:ClassicAssist.UI.Misc.Behaviours"
             xmlns:valueConverters="clr-namespace:ClassicAssist.UI.Misc.ValueConverters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Resources/DarkTheme.xaml" />
                <ResourceDictionary Source="../../../Resources/LeftRightIconToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <valueConverters:LinePausedValueConverter x:Key="LinePausedValueConverter" />
            <valueConverters:MacroExceptionValueConverter x:Key="MacroExceptionValueConverter" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Initialized="Grid_Initialized" DataContext="{Binding SelectedItem, ElementName=userControl, Mode=OneWay}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <avalonedit:TextEditor ShowLineNumbers="True" x:Name="CodeTextEditor"
                               FontFamily="Consolas">
            <avalonedit:TextEditor.Style>
                <Style TargetType="{x:Type avalonedit:TextEditor}"
                       BasedOn="{StaticResource {x:Type avalonedit:TextEditor}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=.}" Value="{x:Null}">
                            <Setter Property="IsEnabled" Value="False" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </avalonedit:TextEditor.Style>
            <b:Interaction.Behaviors>
                <behaviours:AvalonEditBehaviour
                    TextBinding="{Binding Macro}" />
                <behaviours:AvalonBindingBehaviour DocumentBinding="{Binding Document, ElementName=userControl}"
                                                   CaretBinding="{Binding CaretPosition, ElementName=userControl}" />
                <behaviours:AvalonEditBreakpointMarginBehaviour Breakpoints="{Binding Breakpoints}" />
                <behaviours:AvalonEditPausedLineBehaviour IsPaused="{Binding IsPaused}"
                                                          PausedLineNumber="{Binding PausedLinedNumber}" />
                <behaviours:AvalonEditShowCompletionTooltipBehaviour
                    IsPaused="{Binding IsPaused}"
                    FrameVariables="{Binding FrameVariables}" />
            </b:Interaction.Behaviors>
        </avalonedit:TextEditor>
        <local:MacrosDebuggerControl Grid.Row="0" MacroEntry="{Binding Path=.}">
            <local:MacrosDebuggerControl.Style>
                <Style TargetType="{x:Type local:MacrosDebuggerControl}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPaused}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </local:MacrosDebuggerControl.Style>
        </local:MacrosDebuggerControl>
        <ProgressBar IsIndeterminate="True" Grid.Row="0" Height="5" VerticalAlignment="Bottom"
                     Visibility="{Binding IsPerformingAction, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=userControl}" />
        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Bottom"
                    Background="{DynamicResource ThemeBackgroundBrush}">
            <StackPanel.Style>
                <Style TargetType="{x:Type StackPanel}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding FormatError,ElementName=userControl, TargetNullValue=''}"
                                     Value="">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <Image Source="{DynamicResource ExclamationIcon}" Height="12" Margin="10,0,10,0" />
            <TextBlock Text="{Binding FormatError, ElementName=userControl}" />
        </StackPanel>
        <Grid Grid.Row="2" Margin="5">
            <Grid.Style>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding LastException}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Text="{Binding LastException, Converter={StaticResource MacroExceptionValueConverter}}"
                Grid.Column="0" />
            <Button Background="Transparent" Padding="0" Margin="0" BorderThickness="0" BorderBrush="Transparent"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Command="{Binding ClearExceptionCommand, ElementName=userControl}"
                    CommandParameter="{Binding Path=.}" Height="12" Grid.Column="1">
                <Image Source="{StaticResource closeIcon}" Margin="0,0,0,0" />
            </Button>
        </Grid>
        <Grid Grid.Row="2" Margin="5">
            <Grid.Style>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPaused}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Text="{Binding PausedLinedNumber, Converter={StaticResource LinePausedValueConverter}}"
                Grid.Column="0" />
        </Grid>
    </Grid>
</UserControl>