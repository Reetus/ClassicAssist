<UserControl x:Class="ClassicAssist.UI.Views.MultiClilocSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClassicAssist.UI.Views"
             xmlns:misc="clr-namespace:ClassicAssist.Misc"
             xmlns:controls="clr-namespace:ClassicAssist.Controls;assembly=ClassicAssist.Controls"
             xmlns:resources="clr-namespace:ClassicAssist.Shared.Resources;assembly=ClassicAssist.Shared"
             xmlns:valueConverters="clr-namespace:ClassicAssist.UI.Misc.ValueConverters"
             mc:Ignorable="d" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <misc:BindingProxy x:Key="Proxy"
                               Data="{Binding Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MultiClilocSelector}}}" />
            <valueConverters:ClilocValueConverter x:Key="ClilocValueConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <!-- ReSharper disable once Xaml.BindingWithoutContextNotResolved -->
    <controls:MultiValueSelector Values="{Binding Values}" PopupWidth="400">
        <controls:MultiValueSelector.Buttons>
            <StackPanel Orientation="Horizontal">
                <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                <controls:ImageButton ImageSource="{StaticResource ExportIcon}" Margin="5,0,0,0"
                                      Command="{Binding Data.ChooseClilocCommand, Source={StaticResource Proxy}}"
                                      ToolTip="{x:Static resources:Strings.Choose_by_Cliloc}" />
                <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                <controls:ImageButton ImageSource="{StaticResource CrosshairIcon}" Margin="5,0,0,0"
                                      Command="{Binding Data.ChooseFromItemCommand, Source={StaticResource Proxy}}"
                                      ToolTip="{x:Static resources:Strings.Choose_from_Item}" />
            </StackPanel>
        </controls:MultiValueSelector.Buttons>
        <controls:MultiValueSelector.ItemTemplate>
            <DataTemplate>
                <TextBlock Foreground="{StaticResource ThemeForegroundBrush}" TextTrimming="CharacterEllipsis">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} ({1})">
                            <Binding Path="." />
                            <Binding Path="." Converter="{StaticResource ClilocValueConverter}" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </DataTemplate>
        </controls:MultiValueSelector.ItemTemplate>
    </controls:MultiValueSelector>

</UserControl>