<UserControl x:Name="userControl" x:Class="ClassicAssist.UI.Views.MultiItemIDSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClassicAssist.UI.Views"
             xmlns:controls="clr-namespace:ClassicAssist.Controls;assembly=ClassicAssist.Controls"
             xmlns:misc="clr-namespace:ClassicAssist.Misc"
             mc:Ignorable="d" d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <misc:BindingProxy x:Key="Proxy"
                               Data="{Binding Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MultiItemIDSelector}}}" />
        </ResourceDictionary>
    </UserControl.Resources>
    <!-- ReSharper disable once Xaml.BindingWithoutContextNotResolved -->
    <controls:MultiValueSelector Values="{Binding Values}">
        <controls:MultiValueSelector.Buttons>
            <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
            <controls:ImageButton ImageSource="{StaticResource CrosshairIcon}" Margin="5,0,0,0"
                                  Command="{Binding Data.TargetCommand, Source={StaticResource Proxy}}" />
        </controls:MultiValueSelector.Buttons>
    </controls:MultiValueSelector>
</UserControl>