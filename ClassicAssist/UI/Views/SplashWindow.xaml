<Window x:Class="ClassicAssist.UI.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassicAssist.UI.Views"
        xmlns:resources="clr-namespace:ClassicAssist.Shared.Resources;assembly=ClassicAssist.Shared"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="{x:Static resources:Strings.ProductName}" SizeToContent="WidthAndHeight" Topmost="True">
    <Image Opacity="0.9"
           Source="{Binding Path=Image,Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:SplashWindow}}}"
           Stretch="None" />
</Window>